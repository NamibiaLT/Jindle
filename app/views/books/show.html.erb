require_relative 'books_controller'

<% title(@books.title, 'Jindle') %>
<%= link_to 'Saved Book', saved_book_path(@books) %>
<%= link_to 'Edit Book', edit_book_path(@books) %>
<%= link_to 'Delete Book',
    book_path(@books),
    method: :delete,
    data: { confirm: 'Are you sure you want to delete this book?' }
%>
<h1><%= @books.title %></h1>
<h2><%= @books.author %></h2>
<p><%= @books.description %></p>
<p><%= @books.summary %></p>
